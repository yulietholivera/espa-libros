{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build/client/client"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/src/index.ts" },
    { "source": "/(.*)",      "destination": "/index.html" }
  ]
}